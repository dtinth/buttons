<%
height = height || 90

var w = +param('button_width') || 200
var x = (width - w) / 2 

var h = height - 2
var y = 1

%>
<svg xmlns="http://www.w3.org/2000/svg" version="1.1"
    width="<%= width %>" height="<%= height %>">
  <rect stroke="#dddddd" fill="#eeeeee" height="<%= h %>" width="<%= w %>" y="<%= y %>" x="<%= x %>"></rect>
  <text fill="#000000" stroke="none" font="40px Helvetica Neue, Helvetica, sans-serif" text-anchor="middle"
      y="<%= height / 2 %>" x="<%= width / 2 %>" style="text-anchor: middle; font: 40px Helvtica Neue, Helvetica, sans-serif;">
    <tspan dy="10.75"><%= param('text') %></tspan>
  </text>
</svg>
